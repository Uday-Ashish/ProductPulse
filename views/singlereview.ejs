
<html>
  
  <%- include('./partials/head.ejs') %>
  
  
  <body>

    <header>
        <nav class = "navbar">
            <div class = "container">
              <a href = "/" class = "navbar-brand">ProductPulse | <%= title %></a>
              <div class = "navbar-nav">
                <a href = "/">home</a>
                <a href = "/createreview">create</a>
                <a href = "/reviews">All Products</a>
                <a href = "/about">about</a>
              </div>
            </div>
          </nav>

      
      <section class = "blog" id = "blog">
        <div class = "container">
          

            <% if(review) { %>
                    <div class = "title">
                      <h2><%= review.title %></h2>
                      <p><%= review.subhead %></p>
                    </div>
                    <div class = "blog-content">
                    <div class = "blog-item">
                        <div class = "blog-img">
                            <iframe style="height: 480px; width: 720px;" src="<%=review.pictureLink%>"  allow="autoplay"></iframe>
                        </div>

                        <div id="star-rating" class="star-rating">
                            <h3>Rating:</h3>
                              <div class="stars">
                              <% for (let i = 1; i <= review.rating && i<= 5; i++) { %>
                                <span class="star filled ">&#9733;</span>
                              <% } %>
                              </div>
                          </div>

                        <div class = "blog-text">
                            <% const options = { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' }; %>
                            <% const formattedDate = review.updatedAt.toLocaleDateString('en-US', options); %>  
                          <span> <%= formattedDate %></span>
                          <p><%= review.content %> </p> <br>
                        </div>
                    </div>
            <% } else { %>
                <h5> There are no reviews display noob </h5>
            <% } %>
                    

            
      

      
    </header>
    

    <!-- footer -->
    <%- include('./partials/footer.ejs') %>
    <!-- end of footer -->
    
    
  </body>
</html>