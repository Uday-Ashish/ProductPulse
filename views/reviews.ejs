
<html>
  
  <%- include('./partials/head.ejs') %>
  
  
  <body>

    <header>
        <nav class = "navbar">
            <div class = "container">
              <a href = "/" class = "navbar-brand">ProductPulse | <%= title %></a>
              <div class = "navbar-nav">
                <a href = "/">home</a>
                <a href = "/createreview">create</a>
                <a href = "/reviews">All Products</a>
                <a href = "/about">about</a>
              </div>
            </div>
          </nav>

       
      
      <section class = "blog" id = "blog">
        <div class = "container">
          <div class = "title">
            <h2>Latest Reviews</h2>
            <p>recently uploaded product reviews</p>
          </div>
          <div class = "blog-content">

            <% if(reviews.length > 0) { %>
                <% reviews.forEach( review => {   %>
                   
                    <div class = "blog-item">
                        <div class = "blog-img">
                            <iframe src="<%=review.pictureLink%>"  allow="autoplay"></iframe>
                          
                        </div>
                        <div class = "blog-text">
                            <% const options = { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' }; %>
                            <% const formattedDate = review.updatedAt.toLocaleDateString('en-US', options); %>  
                          <span> <%= formattedDate %></span>
                          <h2><%= review.title %></h2>
                        
                          <p><%= review.subhead %></p>
                          <div id="star-rating" class="star-rating">
                            <h3>Rating:</h3>
                              <div class="stars">
                              <% for (let i = 1; i <= review.rating && i<= 5; i++) { %>
                                <span class="star filled ">&#9733;</span>
                              <% } %>
                              </div>
                          </div>

                          <a href = "/review?id=<%= review._id %>">Read More</a>
                        </div>
                    </div>
                <% } ) ; %>
            <% } else { %>
                <h2> There are no reviews display noob. </h2>
            <% } %>
                    



          </div>
        </div>
      </section>
      
    </header>
    

    <!-- footer -->
    <%- include('./partials/footer.ejs') %>
    <!-- end of footer -->
    
    
  </body>
</html>